<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.tw.a01catincloud.activity.SingleCatActivity">

    <ImageView
        android:id="@+id/image_banner"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_size_200"
        android:src="@mipmap/banner_1" />

    <TextView
        android:id="@+id/message"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="loading..."
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/ui_size_80"
        android:layout_height="@dimen/ui_size_80"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/profile1" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="loading..."
        android:textAlignment="center" />

    <LinearLayout

        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/ui_size_40"
                android:layout_height="@dimen/ui_size_40"
                android:src="@mipmap/star" />

            <TextView
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ui_size_20"
                android:text="100 Stars"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/ui_size_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/ui_size_40"
                android:layout_height="@dimen/ui_size_40"
                android:layout_toRightOf="@+id/image1"
                android:src="@mipmap/star" />

            <TextView
                android:id="@+id/follows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ui_size_20"
                android:text="100 follows"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/ui_size_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="@dimen/ui_size_40"
                android:layout_height="@dimen/ui_size_40"
                android:src="@mipmap/star" />

            <TextView
                android:id="@+id/fishes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ui_size_20"
                android:text="100 fishes"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/ui_size_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="@dimen/ui_size_40"
                android:layout_height="@dimen/ui_size_40"
                android:src="@mipmap/star" />

            <TextView
                android:id="@+id/adopted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ui_size_20"
                android:text="100 adopted"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>